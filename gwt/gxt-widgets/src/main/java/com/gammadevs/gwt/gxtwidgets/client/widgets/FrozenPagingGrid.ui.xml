<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
        >

    <ui:style>
        .strut {
            background-color: darkgray;
        }
    </ui:style>

    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="gridLayoutData">
        <ui:attributes width="1" height="1" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="strutLayoutDate">
        <ui:attributes width="1.1" height="1" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="gridVerticalLayoutData">
        <ui:attributes width="1" height="1" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="toolBarLayoutData">
        <ui:attributes width="1" height="-1" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="lockedLayoutData" />


    <container:VerticalLayoutContainer>

        <container:child layoutData="{gridVerticalLayoutData}">
            <container:HorizontalLayoutContainer>
                <container:child layoutData="{lockedLayoutData}">
                    <grid:Grid ui:field="lockedGrid"/>
                </container:child>
                <container:child layoutData="{strutLayoutDate}">
                    <g:HTMLPanel styleName="{style.strut}"/>
                </container:child>
                <container:child layoutData="{gridLayoutData}">
                    <grid:Grid ui:field="grid"/>
                </container:child>
            </container:HorizontalLayoutContainer>
        </container:child>

        <container:child layoutData="{toolBarLayoutData}">
            <toolbar:PagingToolBar pageSize="50" ui:field="toolBar"/>
        </container:child>


    </container:VerticalLayoutContainer>

</ui:UiBinder>