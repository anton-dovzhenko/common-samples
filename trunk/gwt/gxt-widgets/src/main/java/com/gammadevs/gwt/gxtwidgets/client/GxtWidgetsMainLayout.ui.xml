<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:tabs="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:tree="urn:import:com.sencha.gxt.widget.core.client.tree">

    <ui:with type="com.sencha.gxt.data.shared.TreeStore" field="store" />
    <ui:with type="com.sencha.gxt.core.client.ValueProvider" field="valueProvider" />
    <ui:with type="com.google.gwt.cell.client.Cell" field="actionCell" />

    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="westMargins">
        <ui:attributes top="0" right="5" bottom="0" left="5" />
    </ui:with>
    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="centerMargins">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="westData">
        <ui:attributes size="300" margins="{westMargins}" collapsible="true" split="true" />
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.MarginData" field="centerData">
        <ui:attributes margins="{centerMargins}" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="normalTabConfig">
        <ui:attributes text="Normal" closable="true"/>
    </ui:with>

    <container:BorderLayoutContainer ui:field="con" borders="true">
        <container:west layoutData="{westData}">
            <gxt:ContentPanel headingText="Navigation">
                <tree:Tree ui:field="tree" width="300" valueProvider="{valueProvider}" store="{store}" cell="{actionCell}">
                </tree:Tree>
            </gxt:ContentPanel>
        </container:west>
        <container:center layoutData="{centerData}">
            <tabs:PlainTabPanel ui:field="tabPanel" closeContextMenu="true">
                <tabs:child config="{normalTabConfig}">
                    <g:Label text="Just a plain old tab" />
                </tabs:child>


            </tabs:PlainTabPanel>
        </container:center>
    </container:BorderLayoutContainer>

</ui:UiBinder>